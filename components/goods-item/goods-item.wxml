<!--components/goods-item/goods-item.wxml-->
<template name="goods-item">
  <view class="item-box {{size}}">
    <image src="{{good.icon}}" class="goods-icon"></image>
    <view class="goods-info">
    <text class="goods-name">{{good.name}}</text>
    <view class="goods-tab" wx:if="{{good.tab_price}}">称重补差价</view>
    <view class="goods-no-tab" wx:else></view>
    <text class="goods-price">￥{{good.price}}</text>
    </view>
    <view >
      <image src="../../images/add.png" class="add-icon"></image>
    </view>
  </view>
</template>