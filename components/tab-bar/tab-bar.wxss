/* components/tab-bar/tab-bar.wxss */
.tab{
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom:0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
}
.tab .cart-icon{
  width: 50rpx;
  height: 50rpx;
}
.tab>.tab-btn{
  flex-grow: 1;
  margin-left: 40rpx;
  text-align: center;
  padding: 10rpx 0;
  background: linear-gradient(to right, #EEC591,#EE7942);
  color: #fff;
  font-size: 30rpx;
  border-radius: 30rpx;
}
.tab .num {
  margin: 0 30rpx;
}

.numCheck{
  display: flex;
  align-items: center;
}
.numCheck .check{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 50rpx;
  height: 50rpx;
  border: 1rpx solid #eee;
  border-radius: 50%;
  margin: 0 10rpx;
}
.numCheck>.add{
  background: #EE7942;
  color: #fff;
}
.numCheck>.minus{
  border: 1rpx solid #EE7942;
  color: #EE7942;
}