/* components/tab-bar/tab-bar.wxss */
@import "/style/common.wxss";
.tab{
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom:0;
  left: 0;
  right: 0;
  height: 90rpx;
  padding: 0 30rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
}
.tab .cart-icon{
  width: 50rpx;
  height: 50rpx;
}
.tab>.tab-btn{
  flex-grow: 1;
  margin-left: 40rpx;
  text-align: center;
  padding: 10rpx 0;
  background: linear-gradient(to right, #EEC591,#EE7942);
  color: #fff;
  font-size: 30rpx;
  border-radius: 30rpx;
}
.tab .num {
  margin: 0 30rpx;
}