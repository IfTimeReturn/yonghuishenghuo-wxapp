/* pages/address/address.wxss */
.container{
  padding: 20rpx;
}
.card{
  padding: 0 30rpx;
}
.card>.section{
  border-bottom: 1rpx solid #eee;
}
.card>.section:last-child{
  border: none;
}
.address-info{
  margin-top: 20rpx;
}
form .submit{
  margin-top: 80rpx;
}
.tag-box{
  display: flex;
}
.tag-box>.tag{
  display: inline-block;
  height: 22px;
  line-height: 22px;
  margin: 2px 4px 2px 0;
  padding: 0 8px;
  border: 1px solid #e8eaec;
  border-radius: 3px;
  background: #f7f7f7;
  font-size: 12px;
  vertical-align: middle;
  opacity: 1;
  overflow: hidden;
  cursor: pointer;
  color: #999;
}
modal .input{
  background: #e8eaec;
  border-radius: 8rpx;
  padding: 10rpx 15rpx;
}