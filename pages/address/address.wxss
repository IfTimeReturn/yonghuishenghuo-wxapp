/* pages/address/address.wxss */
.container{
  padding: 20rpx;
}
.card{
  padding: 0 30rpx;
}
.card>.section{
  border-bottom: 1rpx solid #eee;
}
.card>.section:last-child{
  border: none;
}
.address-info{
  margin-top: 20rpx;
}
form .submit{
  margin-top: 80rpx;
}
.tag-box{
  display: flex;
}
.tag-box>.tag{
  display: inline-block;
  min-width: 40rpx;
  text-align: center;
  height: 44rpx;
  line-height: 44rpx;
  margin: 4rpx 8rpx 4rpx 0;
  padding: 0 16rpx;
  border: 1rpx solid #e8eaec;
  border-radius: 6rpx;
  background: #f7f7f7;
  font-size: 24rpx;
  vertical-align: middle;
  opacity: 1;
  overflow: hidden;
  cursor: pointer;
  color: #999;
}
modal .input{
  background: #e8eaec;
  border-radius: 8rpx;
  padding: 10rpx 15rpx;
}