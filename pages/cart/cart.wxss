/* pages/cart/cart.wxss */
.container{
  background: #eee;
}
.address{
  display: flex;
  align-items: center;
  padding: 40rpx;
  font-size: 26rpx;
  border-bottom: 1rpx solid #dbdbdb;
  background: #fff;
}
.address>.address-icon{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.address>.add-address{
  position: absolute;
  right: 20rpx;
  color: #EE7942;
}
.address>.add-address>image{
  width: 25rpx;
  height: 25rpx;
}
.cart-box{
  margin: 20rpx;
}
.cart-heard{
  display: flex;
  padding-bottom: 20rpx;
  font-size: 26rpx;
  border-bottom: 1rpx solid #eee;
}
.check{
  margin: 10rpx;
}
.cart-heard>.seller{
  margin-left: 50rpx;
}
.cart-heard>.seller>text{
  font-size: 23rpx;
  color: #999;
}

.cart-item{
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}
.cart-item>.goods-box{
  display: flex;
  margin-left: 50rpx;
  flex-grow: 1;
}
.cart-item>.goods-box>.goods-icon{
  width: 120rpx;
  height: 120rpx;
}
.cart-item>.goods-box>.goods-info{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
  font-size: 28rpx;
  margin-left: 50rpx;
}
.cart-item>.goods-box>.goods-info>.goods-footer{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cart-footer{
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  padding: 20rpx 10rpx 0;
  border-top: 1rpx dashed #eee;
}
.cart-footer>.total-money>text{
  color: #999;
}
.cart-footer .price {
  font-size: 28rpx;
}
.cart-footer>.settle{
  padding: 15rpx 40rpx;
  background: #EE7942;
  color: #fff;
  font-size: 28rpx;
  border-radius: 5rpx;
}
.no-data{
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}
.no-data>image{
  width: 250rpx;
  height: 200rpx;
  margin: 50rpx auto;
}
.no-data>text{
  font-size: 26rpx;
  color: #999;
}
.no-data>.btn{
  width: 100rpx;
  margin: 50rpx auto;
  padding: 10rpx 60rpx;
  color: #EE7942;
  border: 1rpx solid #EE7942;
  border-radius: 5rpx;
  font-size: 28rpx;
}
.recommend{
  margin: 0 20rpx;
}