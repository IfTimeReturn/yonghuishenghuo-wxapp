/* pages/mall/mall.wxss */

.container {
  height: 100%;
  width:100%;
  display: inline;
}

.mall-heard {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background: #3b3b3b;
  border-top: 1rpx solid #616161;
  color: #fff;
  font-size: 26rpx;
  position: relative;
  z-index: 1002;
}

.mall-heard .heard-left {
  display: flex;
  align-items: center;
}

.mall-heard image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.mall-heard .heard-right {
  position: relative;
}

.mall-heard input {
  background: #fff;
  padding-left: 60rpx;
  border-radius: 26rpx;
}

.mall-heard .search-icon {
  position: absolute;
  top: 12rpx;
  left: 20rpx;
}

.goods-content {
  display: flex;
  width: 100%;
  position: absolute;
  top: 172.5rpx;
  bottom: 0;
  left: 0;
  background: #fff;
}

.breed-box {
  width: 160rpx;
  height: 100%;
  background: #fffafa;
}

.breed-item {
  display: flex;
  justify-content: center;
  position: relative;
  padding: 30rpx 0;
  color: #616161;
  font-size: 28rpx;
}
.breed-item.actived{
  background: #fff;
  color: #EE7942;
}
.breed-item>.new_tab{
  position: absolute;
  left: -40rpx;
  top: -40rpx;
  width: 0rpx;
  height: 0rpx;
  border: 40rpx solid;
  border-color: transparent red transparent transparent;
  color: #fff;
  transform: rotate(45deg);
}
.breed-item>.new_tab text{
  position: absolute;
  left: 8rpx;
  top: -16rpx;
  transform: rotate(-45deg);
  font-size: 23rpx;
}
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}