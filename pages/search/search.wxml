<!--pages/search/search.wxml-->
<view class="container">
	<view class="search">
	<view class="search-input">
		<input value="{{search}}" placeholder="请输入商品名称" confirm-type="search" bindinput='changeInput'></input>
		<icon type="search" color="#999" size="14" class="search-icon icon"/>
		<icon type="clear" color="#999" size="14" catchtap='clearSearch' class="clear-icon icon" hidden="{{search.length <= 0}}"/>
	</view>
		<text class="cancel">取消</text>
	</view>
	<view class="search-hint" hidden="{{search.length <= 0}}">
		<view class="hint-item" bindtap="getSearch" >搜索“{{search}}”</view>
	</view>
	<view class="history" hidden="{{search.length > 0 || history.length <= 0}}">
		<view class="history-head">
			<text>搜索历史</text>
			<image class="del" src="../../images/del.png" mode="scaleToFill" bindtap="clearHistory"></image>
		</view>
		<view class="history-container">
			<text class="history-item" wx:for="{{history}}" wx:key="{{index}}" bindtap="getSearch" data-search="{{item}}">{{item}}</text>
		</view>
	</view>
</view>
